@model LoginViewModel
<div class="container flex-center">
    <div class="window">
        <h2>Login(로그인)</h2>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="Name">Username(이름)</label>
                    <input type="text" asp-for="Name" placeholder="Username" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password(비밀번호)</label>
                    <input asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" />
                </div>
            </div>
        </form>
        <a asp-action="Register" asp-controller="Account">Register(회원가입)</a>
    </div>
</div>
@section Styles{
    <link rel="stylesheet" href="~/webpack/css/form.css"/>
}